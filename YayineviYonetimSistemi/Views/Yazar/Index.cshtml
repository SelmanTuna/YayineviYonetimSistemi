@using YayineviYonetimSistemi.Models.Entity
@model List<Yazarlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2>Yazarlar</h2>

<table class="table table-bordered">
    <tr>
        <th>Yazar ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Kitap Adı</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.yazarID</td>
            <td>@y.Ad</td>
            <td>@y.Soyad</td>
            <td>@y.Kitaplar.Baslik</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.yazarID }, new { @class = "btn btn-danger", onclick = "return confirm('Yazar Silinmek Üzere!')" })</td>
            <td><a href="/Yazar/YazarGetir/@y.yazarID" class="btn btn-success">Güncelle</a></td> 
        </tr>
    }    
</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>

